{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "default": {
                "username": "${CONTAINER_REGISTRY_USERNAME}",
                "password": "${CONTAINER_REGISTRY_PASSWORD}",
                "address": "${CONTAINER_REGISTRY_SERVER}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "RedisTimeSeries": {
            "version": "$BUILD_VERSION",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 0,
            "settings": {
              "image": "${MODULES.RedisTimeSeries}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "$REDIS_UNIX_SOCKET_VOL:$REDIS_UNIX_SOCKET_DIR"
                  ]
                }
              }
            }
          },
          "SimulatedTemperatureSensor": {
            "version": "$BUILD_VERSION",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 0,
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-simulated-temperature-sensor:1.4",
              "createOptions": {}
            },
            "env": {
              "MessageCount": {
                "value": -1
              },
              "MessageDelay": {
                "value": "00:00:01"
              }
            }
          },
          "RedisTimeSeriesEdge": {
            "version": "$BUILD_VERSION",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 1,
            "settings": {
              "image": "${MODULES.RedisTimeSeriesEdge.debug}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "$REDIS_UNIX_SOCKET_VOL:$REDIS_UNIX_SOCKET_DIR"
                  ]
                }
              }
            },
            "env": {
              "REDIS_ADDRESS": {
                "value": "$REDIS_UNIX_SOCKET_DIR/redis.sock"
              }
            }
          },
          "RedisExporter": {
            "version": "$BUILD_VERSION",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 1,
            "settings": {
              "image": "oliver006/redis_exporter",
              "createOptions": {
                "Hostname": "$REDIS_EXPORTER_HOST",
                "HostConfig": {
                  "Binds": [
                    "$REDIS_UNIX_SOCKET_VOL:$REDIS_UNIX_SOCKET_DIR"
                  ]
                }
              }
            },
            "env": {
              "REDIS_ADDR": {
                "value": "unix://$REDIS_UNIX_SOCKET_DIR/redis.sock"
              }
            }
          },
          "Prometheus": {
            "version": "$BUILD_VERSION",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 2,
            "settings": {
              "image": "${MODULES.Prometheus}",
              "createOptions": {
                "Hostname": "$PROMETHEUS_HOST"
              }
            }
          },
          "Grafana": {
            "version": "$BUILD_VERSION",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "startupOrder": 3,
            "settings": {
              "image": "${MODULES.Grafana}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "$REDIS_UNIX_SOCKET_VOL:$REDIS_UNIX_SOCKET_DIR"
                  ],
                  "PortBindings": {
                    "3000/tcp": [
                      {
                        "HostPort": "3000"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "sensorToRedisTimeSeriesEdge": "FROM /messages/modules/SimulatedTemperatureSensor/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/RedisTimeSeriesEdge/inputs/input1\")",
          "RedisTimeSeriesEdgeToIoTHub": "FROM /messages/modules/RedisTimeSeriesEdge/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}